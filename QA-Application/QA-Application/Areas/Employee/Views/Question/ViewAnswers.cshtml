@using QA_Application.ViewModels
@model IEnumerable<ViewAnswerVM>

@{
    ViewData["Title"] = "ViewAnswers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>View Answers</h3>

@*<label class="control-label">Question</label>*@
@*Method 2 but less effective for obtaining data from controller*@
@*<div class="card bg-light mb-2 border-secondary" width="50">
        @ViewData["Question"]
    </div>*@

@if (Model is not null)
{
    @if (Model.ToList().Count == 0)
    {
        <h3 class="text-center text-secondary">No Answers to Display</h3>
    }
    @foreach (var item in Model)
    {
        <div class="form-group">
            <label class="control-label">Question</label>
            <textarea name="QuestionBody" class="form-control" readonly asp-for="@item.QuestionBody" rows="30" cols="100"> </textarea>
        </div>
        break;
    }
    @foreach (var item in Model)
    {
        <div class="card bg-light mb-2 border-secondary">
            <div style="background-color: mediumaquamarine;">
                Userneame: @item.UserName
            </div>
            <div class="m-2">
                Date Answered:  @item.Date
                <hr />
            </div>
            <div class="m-2">
                Answer: @item.AnswerBody
                <hr />
            </div>
        </div>
    }
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
