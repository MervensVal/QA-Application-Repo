@using QA_Application.ViewModels
@model AddQuestionVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Question</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Category</label>
                <select asp-for="Question.CategoryId" name="CategoryId" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>
                <span asp-validation-for="Question.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.UrgencyLevel" class="control-label"></label>
                <select asp-for="Question.UrgencyLevel" name="UrgencyLevel" class="form-control">
                    <option value="1">1 Very Low</option>
                    <option value="2">2 Low</option>
                    <option value="3">3 Average</option>
                    <option value="4">4 High</option>
                    <option value="5">5 Vey High</option>
                </select>
                <span asp-validation-for="Question.UrgencyLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Title" class="control-label"></label>
                <input name="Title" class="form-control" asp-for="Question.Title" />
                <span asp-validation-for="Question.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.QuestionBody" class="control-label"></label>
                <textarea  asp-for="Question.QuestionBody" name="QuestionBody" class="form-control" rows="10" cols="20"></textarea>
                <span asp-validation-for="Question.QuestionBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="hidden" asp-for="Answer" />*@
                <input type="hidden" name="QA_Id" asp-for="Question.QA_Id" />
                <input type="hidden" name="UserName" asp-for="Question.UserName" />
                <input type="hidden" name="Answer" asp-for="Question.Answer" />
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
