@using QA_Application.ViewModels
@model AddAnswerVM

@{
    ViewData["Title"] = "AddAnswer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Answer</h1>
<hr />
@*Need to use linq in repo to get Question info*@
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnswer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Question</label>
                <textarea name="QuestionBody" class="form-control" readonly asp-for="Question.QuestionBody"> </textarea>
                <span asp-validation-for="Question.QuestionBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Answer</label>
                <input name="AnswerBody" class="form-control" asp-for="Answer.AnswerBody">
                <span asp-validation-for="Answer.AnswerBody" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



