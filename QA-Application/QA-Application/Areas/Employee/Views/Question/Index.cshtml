@model IEnumerable<QA_Application.Models.Question>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Questions</h3>

<p>
    <a class="btn btn-outline-info mb-2 mt-2" asp-action="AddQuestion">Add Question</a>
</p>

@foreach (var item in Model)
{
<div class="card bg-light mb-3" style="max-width: 48rem;">
    <div>
        UserName: @Html.DisplayFor(modelItem => item.UserName)
    </div>
    <div>
        Category: @Html.DisplayFor(modelItem => item.CategoryId)
    </div>
    <div>
        Urgency Level: @Html.DisplayFor(modelItem => item.UrgencyLevel)
    </div>
    <div class=" card-header text-white" style="background-color: mediumaquamarine;">
        @Html.DisplayFor(modelItem => item.Title)
    </div>
    <div class="mb-2 card-body border-primary">

        @Html.DisplayFor(modelItem => item.QuestionBody)
    </div>
    @if (item.Answer is not null)
    {
        <div class="mb-2 card-body border-info">
            @Html.DisplayFor(modelItem => item.Answer)
        </div>
    }
    <div class="card-footer">
        <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.QA_Id">Edit</a> |
        @if (item.Answer is null)
        {
            <a class="btn btn-outline-info" asp-action="Answer" asp-route-id="@item.QA_Id">Answer</a>
        }
        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.QA_Id">Delete</a> |
    </div>
</div>
}
