@using QA_Application.Models
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Manage Accounts</h3>

<br/>

<a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Add New User</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Name
            </th>
            <th>
                Account Status
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.LockoutEnd > DateTime.Now)
                    {
                        <p class="text-dark" style="background-color:pink">Locked</p>
                    }
                    else
                    {
                        <p class="text-dark" style="background-color:lightgreen">Active</p>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-action="LockandUnlock" asp-route-id="@item.Id">Manage Account</a>
                </td>
            </tr>
        }
    </tbody>
</table>
